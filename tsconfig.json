{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "lib": [
            "ESNext",
            "dom",
            "dom.iterable"
        ],
        "resolveJsonModule": true,
        "baseUrl": "./"
    },
    "include": [
        "./@src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
